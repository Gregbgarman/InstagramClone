<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etDescription"
        android:visibility="invisible"
        android:layout_width="466dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="124dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textSize="26sp" />

    <Button
        android:id="@+id/PicButton"
        android:layout_width="122dp"
        android:layout_height="56dp"
        android:layout_below="@+id/etDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-38dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        app:icon="@drawable/camera_shadow_fill"
        app:iconPadding="8dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="77dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/instagram_new_post_filled_24"
        app:iconTint="@color/black" />

    <ImageView
        android:id="@+id/theimage"
        android:layout_width="216dp"
        android:layout_height="293dp"
        android:layout_above="@+id/etDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:layout_marginBottom="65dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/homebutton"
        android:layout_width="77dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        app:icon="@drawable/instagram_home_filled_24"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/userbutton"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/instagram_user_filled_24"
        app:iconTint="@color/black" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="211dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="76dp"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_toEndOf="@+id/PicButton"
        app:srcCompat="@drawable/realtitle" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/blackmsg" />

    <Button
        android:id="@+id/logoutbutton"
        android:visibility="invisible"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp"
        android:backgroundTint="@color/black"
        android:text="LOGOUT"
        app:iconTint="@color/black" />

</RelativeLayout>